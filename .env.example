# GenoCRM Environment Variables Example
# Copy this file to .env and fill in your actual values
# These variables work for both local development and docker-compose

# Docker-specific (required for docker-compose)
GITHUB_USERNAME=your-github-username
DB_PASSWORD=your-secure-password-here

# Nextcloud Integration (required)
NEXTCLOUD_BASE_URL=https://nextcloud
NEXTCLOUD_WEBDAV_URL=https://nextcloud/remote.php/dav/files/GenoCRM/
NEXTCLOUD_USERNAME=GenoCRM
NEXTCLOUD_PASSWORD=your_nextcloud_password_here
NEXTCLOUD_DOCUMENTS_PATH=/GenoCRM
NEXTCLOUD_MEMBER_DOCUMENTS_PATH=/GenoCRM/Mitglieder
NEXTCLOUD_SHARE_DOCUMENTS_PATH=/GenoCRM/Anteile
NEXTCLOUD_GENERATED_DOCUMENTS_PATH=/GenoCRM/Erzeugt
NEXTCLOUD_MAX_FILE_SIZE=10485760

# Nextcloud OAuth Authentication (required)
NEXTCLOUD_AUTH_BASE_URL=https://nextcloud
NEXTCLOUD_AUTH_AUTHORIZE_ENDPOINT=https://nextcloud/apps/oauth2/authorize
NEXTCLOUD_AUTH_TOKEN_ENDPOINT=https://nextcloud/apps/oauth2/api/v1/token
NEXTCLOUD_AUTH_USER_INFO_ENDPOINT=https://nextcloud/ocs/v1.php/cloud/user
NEXTCLOUD_AUTH_CLIENT_ID=nextcloud_client_id
NEXTCLOUD_AUTH_CLIENT_SECRET=your_nextcloud_oauth_client_secret_here

# SMTP Email Configuration (required)
SMTP_HOST=mail.example.com
SMTP_PORT=587
SMTP_USERNAME=genocrm@example.com
SMTP_PASSWORD=your_smtp_password_here
SMTP_ENABLE_SSL=true
SMTP_FROM_EMAIL=genocrm@example.com
SMTP_FROM_NAME=GenoCRM BEW

# Optional: WhatsApp Business API
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token_here
WHATSAPP_API_URL=https://graph.facebook.com/v18.0/YOUR_PHONE_NUMBER_ID/messages
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token_here

# Optional: SMS Provider API
SMS_API_KEY=your_sms_provider_api_key_here
SMS_API_URL=https://api.your-sms-provider.com/v1/messages
SMS_STATUS_URL=https://api.your-sms-provider.com/v1/messages
SMS_FROM_NUMBER=+49123456789
SMS_DEFAULT_RATE=0.05
SMS_PROVIDER=generic
