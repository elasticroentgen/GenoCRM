{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=genocrm.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": { "path": "logs/genocrm-.log", "rollingInterval": "Day" }
      }
    ]
  },
  "Nextcloud": {
    "BaseUrl": "https://your-nextcloud-instance.com",
    "WebDAVUrl": "https://your-nextcloud-instance.com/remote.php/dav/files/username/",
    "Username": "your-username",
    "Password": "your-app-password",
    "DocumentsPath": "/Documents/GenoCRM",
    "AuthorizationEndpoint": "https://your-nextcloud-instance.com/apps/oauth2/authorize",
    "TokenEndpoint": "https://your-nextcloud-instance.com/apps/oauth2/api/v1/token",
    "ClientId": "your-oauth-client-id",
    "ClientSecret": "your-oauth-client-secret"
  },
  "AllowedHosts": "*"
}
