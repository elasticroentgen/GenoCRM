@page "/Error"
@using System.Diagnostics
@inject IStringLocalizer<GenoCRM.SharedResource> SharedLocalizer

<PageTitle>@SharedLocalizer["Error"]</PageTitle>

<h1 class="text-danger">@SharedLocalizer["Error"]</h1>
<h2 class="text-danger">@SharedLocalizer["ErrorProcessingRequest"]</h2>

@if (ShowRequestId)
{
    <p>
        <strong>@SharedLocalizer["RequestId"]:</strong> <code>@RequestId</code>
    </p>
}

<h3>@SharedLocalizer["DevelopmentMode"]</h3>
<p>
    @SharedLocalizer["DevelopmentModeExplanation"]
</p>
<p>
    <strong>@SharedLocalizer["DevelopmentModeWarning"]</strong>
    @SharedLocalizer["DevelopmentModeInstructions"]
</p>

@code{
    [CascadingParameter] private HttpContext? HttpContext { get; set; }

    private string? RequestId { get; set; }
    private bool ShowRequestId => !string.IsNullOrEmpty(RequestId);

    protected override void OnInitialized() =>
        RequestId = Activity.Current?.Id ?? HttpContext?.TraceIdentifier;

}