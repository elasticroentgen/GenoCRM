@using Microsoft.AspNetCore.Components.Authorization
@inject IStringLocalizer<GenoCRM.SharedResource> Localizer

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <a class="navbar-brand" href="">@Localizer["ApplicationTitle"]</a>
        <GenoCRM.Components.Shared.CultureSwitcher />
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler"/>

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> @Localizer["Home"]
            </NavLink>
        </div>

        <AuthorizeView>
        <Authorized>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="members">
                    <span class="bi bi-people-fill-nav-menu" aria-hidden="true"></span> @Localizer["Members"]
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="shares">
                    <span class="bi bi-graph-up-arrow-nav-menu" aria-hidden="true"></span> @Localizer["Shares"]
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="shares/transfers">
                    <span class="bi bi-arrow-left-right-nav-menu" aria-hidden="true"></span> @Localizer["ShareTransfers"]
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="dividends">
                    <span class="bi bi-currency-euro-nav-menu" aria-hidden="true"></span> @Localizer["Dividends"]
                </NavLink>
            </div>

            @* TODO: Implement loans page
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="loans">
                    <span class="bi bi-bank-nav-menu" aria-hidden="true"></span> Loans
                </NavLink>
            </div>
            *@

            @* TODO: Implement documents page
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="documents">
                    <span class="bi bi-file-earmark-text-nav-menu" aria-hidden="true"></span> Documents
                </NavLink>
            </div>
            *@

            <AuthorizeView Policy="AdminGroup">
                <Authorized Context="adminContext">
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="messages">
                            <span class="bi bi-envelope-nav-menu" aria-hidden="true"></span> @Localizer["Messages"]
                        </NavLink>
                    </div>
                </Authorized>
            </AuthorizeView>

            <AuthorizeView Policy="ViewAuditLogs">
                <Authorized Context="auditContext">
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="audit-log">
                            <span class="bi bi-shield-check-nav-menu" aria-hidden="true"></span> @Localizer["AuditLog"]
                        </NavLink>
                    </div>
                </Authorized>
            </AuthorizeView>
        </Authorized>
        </AuthorizeView>
    </nav>
</div>